{
  "workbench.colorCustomizations": {
    "activityBar.background": "#4b211d",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#2c7333",
    "activityBarBadge.foreground": "#e7e7e7",
    "titleBar.activeBackground": "#26110f",
    "titleBar.inactiveBackground": "#26110f99",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveForeground": "#e7e7e799",
    "statusBar.background": "#26110f",
    "statusBarItem.hoverBackground": "#4b211d",
    "statusBar.foreground": "#e7e7e7"
  },
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "editor.fontFamily": "'SF Mono','Source Code Pro',  'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "terminal.integrated.fontFamily": "'SFMono Nerd Font', 'Droid Sans Mono'",
  "editor.fontLigatures": true,
  "terminal.integrated.fontWeight": "bold",
  "code-runner.runInTerminal": true,
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    {
      "language": "typescript",
      "autoFix": true
    }
  ],
  "editor.formatOnSave": true,
  "[markdown]": {
    "editor.formatOnSave": true
  },
  // turn it off for JS and JSX, we will do this via eslint
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  // Optional BUT IMPORTANT: If you have the prettier extension enabled for other languages like CSS and HTML, turn it off for JS since we are doing it through Eslint already
  "prettier.disableLanguages": [
    "javascript",
    "javascriptreact",
    "typescript"
  ],
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/coverge": true
  },
  "editor.letterSpacing": 0.4,
  "workbench.colorTheme": "Darcula",
  "files.trimTrailingWhitespace": true,
  "editor.cursorBlinking": "smooth",
  "editor.lineHeight": 20,
}
